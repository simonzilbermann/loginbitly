<body>
	<div class="container h-100">
	<div class="d-flex justify-content-center">
		<div class="card mt-5 col-md-4 animated bounceInDown myForm">
			<div class="card-header">
				<h4>Login form</h4>
			</div>
			<div class="card-body">
				<form>
					<div id="dynamic_container">
						<div class="input-group">
							<div class="input-group-prepend">
								<span class="input-group-text br-15"><i class="fas fa-envelope-square"></i></span>
							</div>
							<input id="Email" type="text" placeholder="your email" class="form-control"/>
						</div>
						<div class="input-group mt-3">
							<div class="input-group-prepend">
								<span class="input-group-text br-15"><i class="fas fa-user-secret"></i></span>
							</div>
							<input id="pass" type="text" placeholder="your pass" class="form-control"/>
						</div>
					</div>
				</form>
			</div>
			<div class="card-footer">
              
                 <h5 id="lit"></h5>
				<a class="btn btn-secondary btn-sm" id="literal" href="">My Bitly App(after login only!!)</a>
				<button type="button" onclick="myfunclog()" class="btn btn-success btn-sm float-right submit_btn">To Login</button>
			</div>
              <a style="text-decoration: none;" href="/2">forgot your password press here</a>
               <a style="text-decoration: none;" href="/1">Create Account</a>
		</div>
	</div>
	</div>
    <script src="/public/js.js"></script>
        <script>
      function myfunclog(){
    const email=document.getElementById("Email").value;
    const pass=document.getElementById("pass").value;
    //פונקצית פץ מחכה את הפוסט מן 
    //לפוסט מן יש סוג הבקשה : פןסט גט 
    //לפוסט מן יש סוגי שדות כמו json urlencoded וכו 
    //לפוסט מן יש האדר שאומר לו מה טייפ השליחה 
    fetch('user/login',{
        method:'POST',
        body:new URLSearchParams({
            email:email,
            password:pass
        })
        }).then((res)=>{
            return res.json()}).then((data)=>{
                document.getElementById('lit').innerHTML=data.msg;
                if(data.msg=="Login seccessfull"){
                document.getElementById('literal').href="https://bitlysim.herokuapp.com/";
                }
            })       
}
    </script>
</body>
</html>




































