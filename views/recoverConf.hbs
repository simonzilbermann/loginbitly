    <script src="/public/js.js"></script>
    <script>
        function RecoverCon(){
    const email=document.getElementById("email").value;
    const tmppass=document.getElementById('tmppass').value;
    const newpass=document.getElementById('newpass').value;
    fetch('user/con',{
        method:'POST',
        body:new URLSearchParams({
            email,
            tok:tmppass,
            newpass
        })
        }).then((res)=>{
            return res.json()}).then((data)=>{
             
             document.getElementById('lit').innerHTML=data.msg;
                })
        }
    </script>
